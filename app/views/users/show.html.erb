<%- model_class = User -%>
<div class="page-header">
  <h1><%= t '.title', :default => @user.artist.profile.name %></h1>
</div>
<div class="clear"></div>
<div class="div3">
  <%= image_tag @user.artist.profile.remote_avatar_url, width: 100, height: 100 %>
</div>
<div class="clear"></div>

<h3 class="blog-title">Upcoming Gigs</h3>

<div class="gig-list">
  <%= render :partial => 'gigs/gigs_list', :locals => {:gigs => current_user.gigs.up_coming_gigs} if current_user.gigs.present? %>
</div>

<div class="clear"></div>
<div class="div3 create-new-gig">
  <%= link_to 'New Gigs', new_gig_path, :class => "blog-title" %>
</div>
<div class="clear"></div>
<div class="div3">
  <h3 class="blog-title">Past Gigs</h3>

  <div class="gig-list">
    <%= render :partial => 'gigs/gigs_list', :locals => {:gigs => current_user.gigs.past_gigs} if current_user.gigs.present? %>
  </div>
</div>


