<h1>Artists</h1>

<table class="table table-striped table-hover">
  <thead>
  <tr>
    <th>Name</th>
    <th>Location</th>
  </tr>
  </thead>
  <tbody>
  <% @artists.each do |artist| %>
      <tr>
        <td><%= artist.try(:profile).try(:name) %></td>
        <td><%= artist.try(:profile).try(:address) %></td>
        <td><%#= link_to 'Show', artist, :'data-toggle' => "modal", :'data-target' => "#myModal", :class => "btn btn-mini btn-info" %>
          <a href="<%= artist_path(artist) %>" data-toggle="modal" data-target="#myModal" class="btn btn-mini btn-info">Show</a>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>