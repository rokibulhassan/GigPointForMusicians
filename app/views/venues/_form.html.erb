<%= f.fields_for :venue do |f| %>

    <div class="control-group">
      <%= f.label :name, 'Venue Name', :class => "control-label" %>
      <div class="controls">
        <%= f.text_field :name %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :address1, 'Address', :class => "control-label" %>
      <div class="controls">
        <%= f.text_field :address1 %>
        <%= f.text_field :address2 %> <br><br>
        <%= f.text_field :address3 %>
        <%= f.text_field :address4 %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :city, :class => "control-label" %>
      <div class="controls">
        <%= f.text_field :city %>
      </div>
    </div>


    <div class="control-group">
      <%= f.label :state, :class => "control-label" %>
      <div class="controls">
        <%= f.text_field :state %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :postcode, 'Post Code', :class => "control-label" %>
      <div class="controls">
        <%= f.text_field :postcode %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :country, :class => "control-label" %>
      <div class="controls">
        <%= f.text_field :country %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :location_map, :class => "control-label" %>
      <div class="controls">
        <%= f.gmap_coordinate_picker :default_coordinates => @gig.venue.default_coordinates.nil? ? user_coordinates_from_ip : @gig.venue.default_coordinates %>
      </div>
    </div>
<% end %>



